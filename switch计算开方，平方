int main()
{
	int num1 = 0;
	double num2, x;
	scanf("%lf%d", &num2, &num1);
	switch (num1)
	{
	case 1:
		x =-num2;		
		printf(" x=%.3f\n", x);
		break;
	case 2:
		x = pow(num2, 2);
		printf(" x=%.4f\n", x);
		break;
		
	case 3:
		x = sqrt(num2*1.0);
		printf(" x=%.1f\n", x);
		break;
	}
	
	return 0;
}
